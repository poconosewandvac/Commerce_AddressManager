{% extends 'addressmanager/manager.twig' %}

{% block content %}

<form action="{{ link }}" method="POST">
    <label for="fullname-{{ address.id }}">{{ lex('commerce.address.name') }} {% if field_errors.fullname is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.fullname }}</span>{% endif %}</label>
    <input id="fullname-{{ address.id }}" type="text" name="fullname" value="{{ address.fullname }}" required>
        
    <label for="email-{{ address.id }}">{{ lex('commerce.address.email') }} {% if field_errors.email is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.email }}</span>{% endif %}</label>
    <input id="email-{{ address.id }}" type="email" name="email" value="{{ address.email }}" required>
        
    <label for="company-{{ address.id }}">{{ lex('commerce.address.company') }} {% if field_errors.company is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.company }}</span>{% endif %} <small>{{ lex('commerce.address.optional') }}</small></label>
    <input id="company-{{ address.id }}" type="text" name="company" value="{{ address.company }}">

    <label for="address1-{{ address.id }}">{{ lex('commerce.address.address') }} {% if field_errors.address is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.address }}</span>{% endif %}</label>
    <input id="address1-{{ address.id }}" type="text" name="address1" value="{{ address.address1 }}" required>
        
    <label for="address2-{{ address.id }}">{{ lex('commerce.address.address2') }} {% if field_errors.address2 is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.address2 }}</span>{% endif %} <small>{{ lex('commerce.address.optional') }}</small></label>
    <input id="address2-{{ address.id }}" type="text" name="address2" value="{{ address.address2 }}">
        
    <label for="zip-{{ address.id }}">{{ lex('commerce.address.zip') }} {% if field_errors.zip is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.zip }}</span>{% endif %}</label>
    <input id="zip-{{ address.id }}" type="text" name="zip" value="{{ address.zip }}" required>
        
    <label for="city-{{ address.id }}">{{ lex('commerce.address.city') }} {% if field_errors.city is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.city }}</span>{% endif %}</label>
    <input id="city-{{ address.id }}" type="text" name="city" value="{{ address.city }}" required>
        
    <label for="state-{{ address.id }}">{{ lex('commerce.address.state') }} {% if field_errors.state is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.state }}</span>{% endif %}</label>
    <input id="state-{{ address.id }}" type="text" name="state" value="{{ address.state }}" required>
        
    <label for="country-{{ address.id }}">{{ lex('commerce.address.country') }} {% if field_errors.country is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.country }}</span>{% endif %}</label>
    <input id="country-{{ address.id }}" type="text" name="country" value="{{ address.country }}" required>
        
    <label for="phone-{{ address.id }}">{{ lex('commerce.address.phone') }} {% if field_errors.phone is defined and old_values.type == address.type %}<span class="address-field-error">{{ field_errors.phone }}</span>{% endif %}</label>
    <input id="phone-{{ address.id }}" type="tel" name="phone" value="{{ address.phone }}" required>

    <input type="hidden" name="add" value="1">
    <input type="hidden" name="type" value="{{ type }}">
    <button class="button address-button-save" type="submit">Add</button>
</form>

{% endblock %}