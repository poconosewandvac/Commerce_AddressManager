<div class="address-wrapper">
    {% if errors %}
        <div class="address-error">
            {% for error in errors %}
                {{ error }}
            {% endfor %}
        </div>
    {% endif %}
    
    {% if messages %}
        {% for message in messages %}
            <p class="address-message">{{ message }}</p>
        {% endfor %}
    {% endif %}
    <div class="address-manager">
        {% block content %}{% endblock %}
    </div>
</div>